    <!-- 회원 기준으로 쿠폰 전체 묶기 -->
    <select id="getMemberWithCouponsByMemberId" resultMap="memberWithCouponsResult">
        SELECT
            m.id as member_id,
            mc.id as mc_id,
            mc.coupon_product_id,
            mc.status,
            cp.id as cp_id,
            cp.coupon_name,
            cp.expired_at,
            cp.discount_value
        FROM
            member m
                LEFT JOIN member_coupon mc ON m.id = mc.member_id
                LEFT JOIN coupon_product cp ON mc.coupon_product_id = cp.id
        WHERE m.id = #{memberId}
    </select>
